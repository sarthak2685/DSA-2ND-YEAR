#include <iostream>
#include <string>
using namespace std;

int main() {
	string a ;
    string b;
    cin>>a;
    cin>>b;
    int len=a.size();
    int l=b.size();
    cout<<len<<" "<<l;
    string c=a+b;
    cout<<"\n"<<c;
    string k;
    k=a[0];
    a[0]=b[0];
    b[0]=k[0];
    cout<<"\n"<<a<<" "<<b;
    
    return 0;
}
